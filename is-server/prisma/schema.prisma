generator photon {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLES {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum STATUS {
  INSTOCK
  SENT
}

enum TOKEN_TYPE {
  AUTH
  REFRESH
}

model Cell {
  id    String @id @default(uuid())
  code  String @unique
  items Item[]
}

model Group {
  id          String @id @default(uuid())
  name        String
  code        String @unique
  checkNumber Int
  items       Item[]
}

model Item {
  id          String    @id @default(uuid())
  name        String    @default("")
  cellId      String
  cell        Cell      @relation(fields: [cellId], references: [id])
  expiresAt   DateTime  @default(now())
  departureAt DateTime  @default(now())
  country     String
  price       Float
  group       Group     @relation(fields: [groupId], references: [id])
  groupId     String
  supplyCode  String
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId String
  status      STATUS

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Pavilion {
  id         String      @id @default(uuid())
  code       String      @unique
  address    String
  equipments Equipment[]
}

model Equipment {
  id         String   @id @default(uuid())
  name       String
  code       String   @unique
  pavilion   Pavilion @relation(fields: [pavilionId], references: [id])
  pavilionId String
  items      Item[]
}

model User {
  id       String  @id @default(uuid())
  username String
  password String
  role     ROLES   @default(EMPLOYEE)
  tokens   Token[]
}

model Token {
  id     String     @id @default(uuid())
  token  String
  type   TOKEN_TYPE @default(AUTH)
  user   User       @relation(fields: [userId], references: [id])
  userId String
}
